<script>
    function createImageFromBuffer() {
        // Get base64 data from the dataset attribute
        const base64Data = document.getElementById('imageData').dataset.image;
    
        // Convert the base64 string to a Uint8Array
        const byteArray = new Uint8Array(atob(base64Data).split('').map(char => char.charCodeAt(0)));
    
        // Create a Blob from the Uint8Array
        const blob = new Blob([byteArray], { type: 'image/jpeg' });
    
        // Create a new image element
        const img = new Image();
    
        // Set the source of the image to the Blob URL
        img.src = URL.createObjectURL(blob);
    
        // Append the image to the document or use it as needed
        document.body.appendChild(img);
    
        // Optionally, you can set other attributes or styles for the image
        img.alt = 'New Image';
        img.style.border = '2px solid #333';
    
        // Download the image with a specified filename
        const link = document.createElement('a');
        link.href = img.src;
        link.download = 'new_image.jpg';  // Set a default filename if not provided
        link.click();
    
        // Clean up the Blob URL
        URL.revokeObjectURL(img.src);
    }
    
    function downloadTxt() {
        const content = `Encrypted Metadata:\n${encodeURIComponent('<%= encryptedText %>')}\n\nKey:\n<%= key %>`;
        const blob = new Blob([content], { type: 'text/plain' });
        const link = document.createElement('a');
        link.href = window.URL.createObjectURL(blob);
        link.download = 'encrypted_metadata_and_key.txt';
        link.click();
    }
</script>

